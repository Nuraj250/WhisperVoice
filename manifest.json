{
    "manifest_version": 3,
    "name": "WhisperVoice",
    "version": "1.0",
    "description": "A browser extension that converts speech to text in real-time using the Web Speech API.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["microphone"]
  }
  